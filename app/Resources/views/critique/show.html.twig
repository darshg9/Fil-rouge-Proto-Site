{% extends 'base.html.twig' %}

{% block body %}
    <h1>Critique</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ critique.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ critique.contenu }}</td>
            </tr>
            <tr>
                <th>Datecritique</th>
                <td>{% if critique.dateCritique %}{{ critique.dateCritique|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ critique.note }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('critique_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('critique_edit', { 'id': critique.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
