{% extends 'base.html.twig' %}

{% block body %}
    <h1>Episode</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ episode.titre }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{% if episode.duree %}{{ episode.duree|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ episode.resume }}</td>
            </tr>
            <tr>
                <th>Diffusionsfutures</th>
                <td>{% if episode.diffusionsFutures %}{{ episode.diffusionsFutures|join(', ') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('episode_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('episode_edit', { 'id': episode.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
