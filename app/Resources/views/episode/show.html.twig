{% extends 'base.html.twig' %}

{% block body %}
    <section>
        <div class="row ">

            <div class="col-sm-10">
                <div class="row">
                    <!--/////////////////********|Image and Rating|********\\\\\\\\\\\\\\\\\!-->
                    <div class="col-sm-7">
                        <img src="{{ episode.saison.serie.url }}" class="img-responsive" alt="Cinque Terre">

                    </div>
                    <!--/////////////////********| Description Série|********\\\\\\\\\\\\\\\\\!-->
                    <div class=" col-sm-5 flexcol" >
                        <div class="detailTitle flexrow" style="justify-content: space-between; padding:20px; align-items:  center;">
                            <a href="{{path('serie_show',{'id':episode.saison.serie.id})}}"><h1>{{ episode.saison.serie.titre }}</h1></a>
                            <div>
                                {% if episode in app.user.episodesVisionnes %}

                                    <div class="btn btn-info">
                                        <div class="BoxFrameBtn ">
                                            <p>Déjà vu</p>
                                        </div>
                                    </div>

                                {% else %}
                                    <a href="{{path('view_episode',{'id':episode.id})}}">

                                        <div class="btn btn-info">
                                            <div class="BoxFrameBtn ">
                                                <p>A voir</p>
                                            </div>
                                        </div>
                                    </a>

                                {% endif %}
                            </div>
                        </div>
                        <div class="detailDescription">
                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#Descriptif">Description</a></li>
                                <li><a data-toggle="tab" href="#Acteurs">Acteurs</a></li>
                            </ul>

                            <div class="tab-content" style="padding:10px">
                                <!--/////////////////********|Descriptif|********\\\\\\\\\\\\\\\\\!-->
                                <div id="Descriptif" class="tab-pane fade in active">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <tbody>
                                                <tr>
                                                    <td>Episode :</td>
                                                    <td>{{ episode.titre }}</td>
                                                </tr>
                                                <tr>
                                                    <td>Titre épisode :</td>
                                                    <td>{{ episode.titre }}</td>
                                                </tr>
                                                <tr>
                                                    <td>Duree :</td>
                                                    <td>{{ episode.duree | date("H:m")}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <!--/////////////////********|Acteurs|********\\\\\\\\\\\\\\\\\!-->
                                <div id="Acteurs" class="tab-pane fade">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <tbody>
                                                {% for acteur in acteurs_serie %}
                                                    <tr>
                                                        <td>{{ acteur.nom }} {{ acteur.prenom }}</td>
                                                    </tr>
                                                {% endfor %}

                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
                <!--/////////////////********|Resumé|********\\\\\\\\\\\\\\\\\!-->
                <div class="detailDescription">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#Descriptif">Résumé de l'épisode</a></li>
                    </ul>

                    <div class="tab-content" style="padding:10px">
                        <div id="Descriptif" class="tab-pane fade in active">
                            <div class="">
                                {{ episode.resume }}
                            </div>
                        </div>
                    </div>
                </div>
                <!--/////////////////********|Diffusion à venire|********\\\\\\\\\\\\\\\\\!-->
                <div class="detailDescription">
                    <ul class="nav nav-tabs">
                        <li class="active"><a data-toggle="tab" href="#Descriptif">Résumé de l'épisode</a></li>
                    </ul>

                    <div class="tab-content" style="padding:10px">
                        <div id="Descriptif" class="tab-pane fade in active">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Date et heure</th>
                                                    <th>Chaine de télévision</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>Sample 1</td>
                                                    <td>Sample 1</td>
                                                </tr>
                                                <tr>
                                                    <td>Sample 1</td>
                                                    <td>Sample 1</td>
                                                </tr>
                                                <tr>
                                                    <td>Sample 1</td>
                                                    <td>Sample 1</td>
                                                </tr>
                                                <tr>
                                                    <td>Sample 1</td>
                                                    <td>Sample 1</td>
                                                </tr>
                                                <tr>
                                                    <td>Sample 1</td>
                                                    <td>Sample 1</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-sm-6 flexcol" style='text-align: center'>
                                    <h1>Calendrier</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/////////////////********|Aside Right|********\\\\\\\\\\\\\\\\\!-->
            <div class="col-sm-2 Aside ">
                <div class="panel-group">
                    <!--/////////////////********|Saison 1|********\\\\\\\\\\\\\\\\\!-->
                    <div class="panel panel-success">
                        {% for key,saison in saisons_all %}
                            <div class="panel-heading">
                                <h4 class="panel-title ">
                                    <a data-toggle="collapse" href="#saison1">Saison {{ key+1 }}</a>
                                </h4>
                            </div>
                            <div id="saison1" class="panel-collapse collapse ">
                                <ul class="list-group">

                                    {% for key,episod in saison.episodes %}
                                        <li class="list-group-item"><a href="{{path('episode_show',{'id':episod.id})}}">Episode {{ key+1 }} - {{ episod.titre }}</a></li>

                                    {% endfor %}
                                </ul>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
{% endblock %}
