{% extends 'base.html.twig' %}
{% block body %}

    <section>
        {% for serie in series %}
            <div class="flexrow container-fluid Box " style='background-image: url("{{serie.url}}");background-size: cover;background-repeat: no-repeat;background-position-y: 25%;'>
                <!--<div class="BoxFrame fh">-->
                <div class="BackColor">

                    <div class="BoxTitle col-sm-6" >
                        <h1 style="font-size : 50px">{{ serie.titre }}</h1>
                        {#<h3 style="padding-left:15px">Vivamus a varius augue. Donec non venenatis lectus. Mauris at porta felis.</h3>#}
                    </div>

                    <div class="flexcol BoxInfo col-sm-offset-1 col-sm-5">
                        <div class="flexcol BoxFrame" style="background-color: rgba(200, 0, 0, 0.5);
                             ">
                            <div class="BoxInfoText flexcol">
                                {#<h4>Le Retour des dragons</h4>#}
                                <p style="align-self: center">
                                    {{ serie.synopsis }}
                                </p>
                            </div>
                        </div>
                        <div style="align-self: flex-end">
                            <a href="{{path('serie_show',{'id':serie.id})}}" >
                                <div class="btn btn-info" >
                                    <div class="BoxFrameBtn" >
                                        <p>En Savoir plus</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        {% endfor %}


        <div class="overflow">
            <div class="flexrow">
                {% for serieLowRating in seriesLowRating %}
                    <div class="smallBox" style='background-image: url("https://pmctvline2.files.wordpress.com/2016/06/mr-robot-season-2-after-show.jpg?w=620");background-size: cover;background-repeat: no-repeat;background-position-y: 25%;'>
                        <div class="BoxFrame" style=" height: 300px;">
                            <div class="BoxTitle flexcol" style="text-shadow: 2px 2px black;">
                                <h1 style="font-size: 60px;">Mr Robot</h1>
                                <h3 style='margin-left: 50px;flex:50%'>Vivamus a varius augue. Donec non venenatis lectus. Mauris at porta felis.</h3>
                                <div style="align-self: flex-end">
                                    <a href="{{path('serie_show',{'id':serieLowRating.id})}}" >
                                        <div class="btn btn-info" >
                                            <div class="BoxFrameBtn" >
                                                <p>En Savoir plus</p>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
